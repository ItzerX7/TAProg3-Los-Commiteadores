<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Site.master.cs" Inherits="FrontVR.SiteMaster" %>

<!DOCTYPE html>
<html lang="es">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%: Page.Title %> - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #121212;
            color: white;
        }

        .wrapper {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 240px;
            background-color: #1f1f1f;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
        }

        .sidebar a {
            color: #bbb;
            padding: 15px 20px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1rem;
            transition: all 0.2s ease-in-out;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #333;
            color: #fff;
        }

        .main-content {
            flex: 1;
            padding: 40px;
            overflow-y: auto;
        }

        footer {
            text-align: center;
            margin-top: 40px;
            color: #888;
        }
    </style>
    <asp:ContentPlaceHolder ID="head" runat="server" />
</head>
<body>
    <form runat="server">
        <asp:ScriptManager runat="server" />
        <div class="wrapper">
            <div class="sidebar">
                <asp:HyperLink  runat="server" ID="lnkPantallaInicio" href="PantallaInicio.aspx"><i class="fas fa-house"></i> Home</asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkDispositivos" href="/Vistas/Dispositivos.aspx"><i class="fas fa-headset"></i> Dispositivos</asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkGrupos" href="/Vistas/Grupos.aspx"><i class="fas fa-layer-group"></i> Grupos </asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkAplicaciones" href="/Vistas/Aplicaciones.aspx"><i class="fas fa-th"></i> Aplicaciones</asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkMetrica" href="Metricas.aspx"><i class="fas fa-chart-bar"></i> Mediciones</asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkActividades" href="/Vistas/Actividades.aspx"><i class="fas fa-tasks"></i> Actividades</asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkAdministracion" href="Administracion.aspx"><i class="fas fa-user-shield"></i> Usuarios</asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkFirmware" href="Firmware.aspx"><i class="fas fa-house "></i> Firmware</asp:HyperLink>
                <asp:HyperLink  runat="server" ID="lnkConfiguracion" href="/Vistas/Configuraciones.aspx"><i class="fas fa-cog"></i> Configuraciones</asp:HyperLink>

                <asp:LinkButton ID="btnLogout" runat="server" CssClass="sidebar-link"
                    OnClick="btnLogout_Click" CausesValidation="False">
                    <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                </asp:LinkButton>


            </div>
            <div class="main-content">
                <asp:ContentPlaceHolder ID="MainContent" runat="server" />
                <footer>
                    <p>&copy; <%: DateTime.Now.Year %> - Plataforma VR</p>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </form>
</body>
</html>
